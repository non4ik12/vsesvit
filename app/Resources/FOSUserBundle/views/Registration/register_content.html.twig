{% trans_default_domain 'FOSUserBundle' %}

<div class="vs-page-title">
	<h1>Авторизация</h1>
</div>
<div class="vs-page-content">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
				<div class="form-group required">
					{{ form_label(form.email, 'form.email'|trans, {'label_attr': {'class': 'control-label'}}) }}
			        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans, 'pattern': '.{,50}'} }) }}
			        <div class="help-block">
			        	Символов: [не более <b>50</b>] 
			        </div>
			        {{ form_errors(form.email) }}					
				</div>

				<div class="form-group required">
					{{ form_label(form.username, 'form.username'|trans, {'label_attr': {'class': 'control-label'}}) }}
			        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans, 'pattern': '.{3,25}' } }) }}
			        <div class="help-block">
			        	Символов: [не менее <b>3</b>][не более <b>25</b>]<br />
			        </div>
			        {{ form_errors(form.username) }}
				</div>

				<div class="form-group required">
					{{ form_label(form.plainPassword.first, 'form.password'|trans, {'label_attr': {'class': 'control-label'}}) }}
			        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans, 'pattern': '.{5,128}' } }) }}
			        <div class="help-block">
			        	Символов: [не менее <b>5</b>][не более <b>128</b>]<br />
					</div>
			        {{ form_errors(form.plainPassword.first) }}
				</div>

				<div class="form-group required">
					{{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class': 'control-label'}}) }}
			        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans, 'pattern': '.{5,128}' } }) }}
			        {{ form_errors(form.plainPassword.second) }}
			    </div>

				<div>
			        <input type="submit" class="btn btn-success" value="{{ 'registration.submit'|trans }}" />
			    </div>
			{{ form_end(form) }}
		</div>
	</div>
</div>


