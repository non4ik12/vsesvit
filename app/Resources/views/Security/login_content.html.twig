{% trans_default_domain 'FOSUserBundle' %}

{{ error }}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="vs-page-title">
	<h1>Авторизация</h1>
</div>
<div class="vs-page-content">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<form action="{{ path("fos_user_security_check") }}" method="post" role="form" data-toggle="validator">
			    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

				<div class="form-group">
				    <label class="control-label" for="username">{{ 'security.login.username'|trans }}</label>
				    <input class="form-control" placeholder="{{ 'security.login.username'|trans }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" pattern=".{4,}" />
				    <div class="help-block">Minimum of 4 characters</div>
				</div>

				<div class="form-group">
				    <label for="password">{{ 'security.login.password'|trans }}</label>
				    <input class="form-control" placeholder="Password" type="password" id="password" name="_password" required="required" data-minlength="6" data-validate="true" pattern=".{8,}" />
				    <div class="help-block">Minimum of 8 characters</div>
				</div>

				<label>
				    <input type="checkbox" id="remember_me" name="_remember_me" />
				    {{ 'security.login.remember_me'|trans }}
				</label>

			    <input type="submit" id="_submit" class="btn btn-success" name="_submit" value="{{ 'security.login.submit'|trans }}" />
			</form>					
		</div>
	</div>
</div>