                        <a href="mailto:turagenciavsesvit@mail.ru">turagenciavsesvit@mail.ru</a>
                    </div>     #}            
                </div>
            </div>
        </div>


        <div class="container">

            {% block body %}{% endblock %}

        </div><!-- /.container -->

        {% block javascripts %}{% endblock %}

    </body>
</html>
